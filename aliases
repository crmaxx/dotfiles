# Unix
alias -r tlf="tail -f"
alias -r ln='ln -v'
alias -r mkdir='mkdir -p'
alias -r ...='../..'
alias -r l='ls'
alias -r ll='ls -al'
alias -r lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
alias -r e="$EDITOR"
alias -r v="$VISUAL"

# git
alias -r gci="git pull --rebase && rake && git push"
alias -r gpo="git pull origin"
alias -r gso="git push origin"

# Bundler
alias -r bi="bundle install"
alias -r bu="bundle update"
alias -r be="bundle exec"

# Tests and Specs
alias -r t="ruby -I test"
alias -r ber="bundle exec rspec"

# Rubygems
alias -r gi="gem install"
alias -r giv="gem install -v"

# Rails
alias -r migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare && annotate"
alias -r m="migrate"
alias -r rk="rake"
alias -r z="zeus"
